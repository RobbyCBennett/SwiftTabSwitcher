{
	"manifest_version": 2,
	"name": "Swift Tab Switcher",
	"short_name": "Swift Tab Switcher",
	"description": "Use shortcuts to quickly switch your current tab.",
	"author": "Robby Bennett",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"version": "2.1",
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "icon128.png"
	},
	"permissions": [
		"tabs",
		"storage"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"commands": {
		"rightTab": {
			"description": "Right",
			"suggested_key": {
				"default": "Ctrl+Right",
				"mac": "Command+Right"
			}
		},
		"leftTab": {
			"description": "Left",
			"suggested_key": {
				"default": "Ctrl+Left",
				"mac": "Command+Left"
			}
		}
	}
}
